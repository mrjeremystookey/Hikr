<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#4CAF50</item>
        <item name="colorControlActivated">#388E3C</item>
        <item name="colorControlHighlight">#C8E6C9</item>
    </style>

    <style name="Forestry" parent="AppTheme" >
        <item name="colorAccent">@color/accent_brown</item>
        <item name="android:textColorPrimary">@color/TextColor</item>
    </style>


</resources>
